<style>
  .form-container {
    max-width: 400px;
    margin: 40px auto;
    background: #fff;
    border-radius: 10px;
    padding: 48px 32px 40px 32px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    font-family: 'Noto Sans KR', sans-serif;
  }

  .form-title {
    color: #267C13;
    font-weight: 700;
    text-align: center;
    font-size: 1.6rem;
    margin-bottom: 32px;
  }

  label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    font-size: 0.95rem;
  }

  input[type="email"] {
    width: 100%;
    padding: 12px;
    margin-bottom: 18px;
    border: 1.5px solid #bbb;
    border-radius: 4px;
    font-size: 1rem;
    background: #fff;
    transition: border 0.2s;
  }

  input:focus {
    border: 1.5px solid #267C13;
    outline: none;
  }

  .submit-btn {
    background: #267C13;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 14px 0;
    width: 100%;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
  }

  .submit-btn:hover {
    background: #1b570e;
  }

  .message {
    color: #267C13;
    margin-bottom: 18px;
    text-align: center;
    font-size: 1rem;
  }

  .error {
    color: #D32F2F;
    margin-bottom: 18px;
    text-align: center;
    font-size: 0.98rem;
  }
</style>

<div class="form-container">
  <div class="form-title">이메일 변경</div>

  <% if (message) { %>
    <div class="message"><%= message %></div>
  <% } %>
  <% if (error && error.length) { %>
    <div class="error"><%= error[0] %></div>
  <% } %>

  <form method="POST" action="/change-email">
    <label for="currentEmail">현재 이메일</label>
    <input type="email" name="currentEmail" value="<%= user?.email || '' %>" readonly>

    <label for="newEmail">새 이메일</label>
    <input type="email" name="newEmail" required>

    <button type="submit" class="submit-btn">변경하기</button>
  </form>
</div>

