<!DOCTYPE html>
<html>
<head>
  <title>Ïù∏Î≤§ÌÜ†Î¶¨</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'neon';
      background-color: #fff;
    }
    .inventory-container {
  position: relative;
  margin: 40px auto;
  top:170px;
  background-color: #d1bb97;
  border-radius: 20px;
  width: 280px;
  height: 380px;
  padding: 20px;
  min-height: 300px; /* ‚úÖ Ïä¨Î°ØÏù¥ Í≥µÍ∞Ñ ÌôïÎ≥¥Ìï† Ïàò ÏûàÍ≤å Ï∂îÍ∞Ä */
}

    .inventory-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: bold;
      font-size: 20px;
    }
    .tab-buttons {
      display: flex;
      justify-content: space-around;
      margin: 10px 0;
    }
    .tab-btn {
      width: 130px;
      padding: 6px 0;
      font-weight: bold;
      background-color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
    .tab-btn.active {
      background-color: #a7855f;
      color: white;
    }
    .item-grid {
      display: grid;
      grid-template-columns: repeat(5, 50px);
      grid-template-rows: repeat(4, 50px);
      gap: 10px;
      justify-content: center;
      margin: 10px 0;
    }
    .item-slot {
      background-color: #6f5a3d;
      border-radius: 8px;
      position: relative;
      cursor: pointer;
    }
    .item-slot.selected {
      outline: 3px solid aqua;
     
    }
    .item-slot img {
      width: 50px;
      height: 50px;
      background-color: #6f5a3d;
      border-radius: 8px;
    }
    .item-count {
      position: absolute;
      bottom: 2px;
      right: 4px;
      font-size: 12px;
      color: white;
      font-weight: bold;
      text-shadow: 1px 1px 2px black;
    }
    .slot-count {
      text-align: center;
      /* margin-top: 15px; */
      font-size: 14px;
      position:relative;
      top:50px;
    /* left:370px; */

    }
  .item-info {
  background-color: #f3e6d0;
  padding: 15px;
  border-radius: 12px;
  margin-top: 10px;
  display: none;
  position: relative;
  bottom:180px;
  right: 10px;
  width: 265px;
  height: 150px;
  bottom: 210px;
}

.info-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-left img {
  width: 80px;
  height: 80px;
}

.info-divider {
  width: 1px;
  height: 150px;
  background-color: black;
  margin: 0 12px;
}

.info-right {
  flex: 1;
}

.info-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6px;
}

.info-desc {
  font-size: 13px;
  line-height: 1.4;
  margin: 0 0 5px;
}

.info-count {
  font-size: 12px;
  color: gray;
  margin-bottom: 8px;
}

.plant-btn {
  background-color: #eeeeee;
  border: none;
  border-radius: 8px;
  padding: 6px 12px;
  font-weight: bold;
  cursor: pointer;
}

    
  </style>
</head>
<body>

<div class="inventory-container">
  <div class="inventory-header">
    <span>üëú Ïù∏Î≤§ÌÜ†Î¶¨</span>
    <a href="/" style="text-decoration: none; color: black;"><strong>X</strong></a>
  </div>

  <div class="tab-buttons">
    <button class="tab-btn active" onclick="filterItems('basic')">Í∏∞Î≥∏</button>
    <button class="tab-btn" onclick="filterItems('gold')">Ìô©Í∏à</button>
  </div>

  <div class="item-grid" id="itemGrid">
    <% for (let i = 0; i <= 20; i++) {
         const item = items[i];
    %>
      <div class=" item-slot <%= item ? '' : 'empty' %>" data-type="<%= item && item.category ? item.category : 'none' %>"

           onclick="selectItem(<%= i %>)" data-idx="<%= i %>">
        <% if (item) { %>
          <img src="img/<%= item.image_path %>" alt="<%= item.item_name %>">
          <div class="item-count"><%= item.item_count %></div>
        
          <% } %>
      </div>
   
    <% } %>

    
  </div>

  <div class="slot-count"><%= items && items.filter(i => i).length %>/20</div>


<div class="item-info" id="itemInfo">
  <div class="info-wrapper">
    <!-- ÏôºÏ™Ω: Ïù¥ÎØ∏ÏßÄ -->
    <div class="info-left">
      <img id="infoImg" src="" alt="">
    </div>

    <!-- Í∞ÄÏö¥Îç∞: Íµ¨Î∂ÑÏÑ† -->
    <div class="info-divider"></div>

    <!-- Ïò§Î•∏Ï™Ω: ÌÖçÏä§Ìä∏ -->
    <div class="info-right">
      <strong id="infoName" class="info-title"></strong>
      <p id="infoDesc" class="info-desc"></p>
      <p class="info-count">Í∞úÏàò: <span id="infoCount"></span>Í∞ú</p>
         <form class="plant-form" action="/inventory/plant" method="POST">
        <input type="hidden" id="hiddenItemId" name="itemId">
        <button type="submit">Ïî®Ïïó Ïã¨Í∏∞</button>
      </form>
    </div>
  </div>
</div>
</div>

<script>
 const allItems = <%- JSON.stringify(items) %>;

function filterItems(category) {
  document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
  document.querySelector(`.tab-btn[onclick*="${category}"]`).classList.add('active');

  const slots = document.querySelectorAll('.item-slot');
  slots.forEach((slot, idx) => {
    const item = allItems[idx];
    // categoryÍ∞Ä ÏùºÏπòÌïòÍ±∞ÎÇò, ÏïÑÏù¥ÌÖúÏù¥ ÏóÜÏúºÎ©¥ Î≥¥Ïó¨Ï§å (Ïä¨Î°Ø Ïú†ÏßÄÏö©)
    if (!item || item.category === category) {
      slot.style.display = 'block';
    } else {
      slot.style.display = 'none';
    }
  });

  document.getElementById('itemInfo').style.display = 'none';
}

  function selectItem(index) {
  const item = allItems[index];
  if (!item) return;

  const slots = document.querySelectorAll('.item-slot');
  slots.forEach((s, i) => {
    s.classList.remove('selected');
    if (i >= 5 && i <= 19) s.style.display = 'none';
  });

  const slot = slots[index];
  slot.classList.add('selected');

  // ÏïÑÏù¥ÌÖú Ï†ïÎ≥¥ Ï±ÑÏö∞Í∏∞
  document.getElementById('itemInfo').style.display = 'block';
  document.getElementById('infoImg').src = '/img/' + item.image_path;
  document.getElementById('infoName').innerText = item.item_name;
  document.getElementById('infoDesc').innerText = item.description || 'ÏÑ§Î™ÖÏù¥ ÏóÜÏäµÎãàÎã§.';
  document.getElementById('infoCount').innerText = item.item_count;
}


  // Í∏∞Î≥∏ ÌÉ≠ÏúºÎ°ú ÏãúÏûë
  filterItems('basic');
</script>

</body>
</html>
