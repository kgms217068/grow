<!DOCTYPE html>
<html>
<head>
  <title>Ïù∏Î≤§ÌÜ†Î¶¨</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'neon';
      background-color: #fff;
    }
    .inventory-container {
  position: relative;
  margin: 40px auto;
  top:170px;
  background-color: #d1bb97;
  border-radius: 20px;
  width: 280px;
  height: 380px;
  padding: 20px;
  min-height: 300px; /* ‚úÖ Ïä¨Î°ØÏù¥ Í≥µÍ∞Ñ ÌôïÎ≥¥Ìï† Ïàò ÏûàÍ≤å Ï∂îÍ∞Ä */
}

    .inventory-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: bold;
      font-size: 20px;
    }
    .tab-buttons {
      display: flex;
      justify-content: space-around;
      margin: 10px 0;
    }
    .tab-btn {
      width: 130px;
      padding: 6px 0;
      font-weight: bold;
      background-color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }
    .tab-btn.active {
      background-color: #a7855f;
      color: white;
    }
    .item-grid {
      display: grid;
      grid-template-columns: repeat(5, 50px);
      grid-template-rows: repeat(4, 50px);
      gap: 10px;
      justify-content: center;
      margin: 10px 0;
    }
    .item-slot {
      background-color: #6f5a3d;
      border-radius: 8px;
      position: relative;
      cursor: pointer;
    }
    .item-slot.selected {
      outline: 3px solid aqua;
     
    }
    .item-slot img {
      width: 50px;
      height: 50px;
      background-color: #6f5a3d;
      border-radius: 8px;
    }
    .item-count {
      position: absolute;
      bottom: 2px;
      right: 4px;
      font-size: 12px;
      color: white;
      font-weight: bold;
      text-shadow: 1px 1px 2px black;
    }
    .slot-count {
      text-align: center;
      /* margin-top: 15px; */
      font-size: 14px;
      position:relative;
      top:20px;
    /* left:370px; */

    }
  .item-info {
  background-color: #f3e6d0;
  padding: 10px;
  border-radius: 8px;
  margin-top: 10px;
  display: none;
  position: relative;
  bottom:220px;
  right: 10px;
  width: 275px;
  height: 150px;
  
}

.info-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info-left img {
  width: 90px;
  height: 90px;
}

.info-divider {
  width: 1px;
  height: 150px;
  background-color: black;
  margin: 0 12px;
}

.info-right {
  flex: 1;
}

.info-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6px;
}

.info-desc {
  font-size: 13px;
  line-height: 1.4;
  margin: 0 0 5px;
}

.info-count {
  font-size: 12px;
  color: gray;
  /* margin-bottom: 8px; */
}

.plant-btn {
  padding: 4px 8px;
  background-color: #f5f5f5;
  border: 1px solid #aaa;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
}

.item-count-text {
  font-size: 14px;
}


 .item-slot img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}
   
  </style>
</head>
<body>

<div class="inventory-container">
  <div class="inventory-header">
    <span>üëú Ïù∏Î≤§ÌÜ†Î¶¨</span>
    <a href="/home" style="text-decoration: none; color: black;"><strong>X</strong></a>
  </div>

  <div class="tab-buttons">
    <button class="tab-btn active" onclick="filterItems('basic')">Í∏∞Î≥∏</button>
    <button class="tab-btn" onclick="filterItems('gold')">Ìô©Í∏à</button>
  </div>

  <div class="item-grid" id="itemGrid">
    <% for (let i = 0; i <= 20; i++) {
         const item = items[i];
    %>
      <div class=" item-slot <%= item ? '' : 'empty' %>" data-type="<%= item && item.category ? item.category : 'none' %>"

           onclick="selectItem(<%= i %>)" data-idx="<%= i %>">
        <% if (item) { %>
          <img style="max-width: 80px; max-height: 80px;" src="/img/<%= item.image_path %>" alt="<%= item.item_name %>">
          <div class="item-count"><%= item.item_count %></div>
        
          <% } %>
      </div>
   
    <% } %>

    
  </div>



 <div class="slot-count">
  <%= items ? items.filter(i => i && i.item_count > 0).length : 0 %>/20
</div>


<div class="item-info" id="itemInfo">
  <div class="info-wrapper">
    <!-- ÏôºÏ™Ω: Ïù¥ÎØ∏ÏßÄ -->
    <div class="info-left">
      <img id="infoImg" src="" alt="">
    </div>

    <!-- Í∞ÄÏö¥Îç∞: Íµ¨Î∂ÑÏÑ† -->
    <div class="info-divider"></div>

    <!-- Ïò§Î•∏Ï™Ω: ÌÖçÏä§Ìä∏ -->
    <div class="info-right">
      <strong id="infoName" class="info-title"></strong>
      <p id="infoDesc" class="info-desc"></p>
     <div class="item-info-bottom" style="display: flex; justify-content: space-between; align-items: center; margin-top: 12px;">
  <div class="item-count-text">Í∞úÏàò: <span id="infoCount"></span>Í∞ú</div>
  <form method="POST" action="/inventory/plant">
    <input type="hidden" name="itemId" id="plantItemId" />
    <button type="submit" class="plant-btn">Ïî®Ïïó Ïã¨Í∏∞</button>
  </form>
</div>

    </div>
  </div>
</div>
</div>

<script>
 const allItems = <%- JSON.stringify(items) %>;

function filterItems(category) {
  currentCategory = category;
  currentVisibleItems = [];

  document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
  document.querySelector(`.tab-btn[onclick*="${category}"]`).classList.add('active');

  const slots = document.querySelectorAll('.item-slot');
  slots.forEach(slot => {
    slot.innerHTML = '';
    slot.style.display = 'block';
  });

  // ‚úÖ ÏàòÎüâ 0Ïù∏ ÏïÑÏù¥ÌÖú Ï†úÏô∏
  let filteredItems = allItems.filter(item =>
    item && item.category === category && item.item_count > 0
  );

  for (let i = 0; i < 20; i++) {
    const slot = slots[i];
    const item = filteredItems[i];

    if (item) {
      currentVisibleItems.push(i);
      slot.innerHTML = `
        <div class="item-img" onclick="selectItem(${item.item_id})">
          <img src="/img/${item.image_path}" />
          <div class="item-count">${item.item_count}</div>
        </div>
      `;
    } else {
      slot.innerHTML = '';
    }
  }

  document.getElementById('itemInfo').style.display = 'none';
}



 function selectItem(itemId) {
  const item = allItems.find(i => i.item_id === itemId);
  if (!item || item.category !== currentCategory) return;

  document.querySelectorAll('.item-slot').forEach(s => s.classList.remove('selected'));
document.getElementById('plantItemId').value = item.item_id;



  // ÏÑ†ÌÉùÎêú Ïä¨Î°Ø Ï∞æÏïÑÏÑú ÌëúÏãú
  const slots = document.querySelectorAll('.item-slot');
  for (let i = 0; i < slots.length; i++) {
    if (slots[i].querySelector('img')?.src.includes(item.image_path)) {
      slots[i].classList.add('selected'); 
      break;
    }
  }

  // ÏÉÅÏÑ∏Ï†ïÎ≥¥ ÏóÖÎç∞Ïù¥Ìä∏
  document.getElementById('itemInfo').style.display = 'block';
  document.getElementById('infoImg').src = '/img/' + item.image_path;
  document.getElementById('infoName').innerText = item.item_name;
  document.getElementById('infoDesc').innerText = item.description || 'ÏÑ§Î™ÖÏù¥ ÏóÜÏäµÎãàÎã§.';
  document.getElementById('infoCount').innerText = item.item_count;
}



  // Í∏∞Î≥∏ ÌÉ≠ÏúºÎ°ú ÏãúÏûë
  filterItems('basic');
</script>

</body>
</html>
