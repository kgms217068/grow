<!-- community.ejs 수정 -->
<div class="community-wrapper" style="text-align: center;">

  <!-- 검색창 수정 -->
  <form action="/community" method="get" style="display: flex; justify-content: center; align-items: center; margin-bottom: 20px;">
    <div style="position: relative; width: 90%; max-width: 540px;">
      <input type="text" name="search" placeholder="검색"
             style="width: 100%; height: 44px; padding: 10px 44px 10px 15px; border-radius: 20px; border: none; font-size: 16px; outline: none; box-shadow: 0 0 0 1px #000000 inset; overflow: hidden; text-overflow: ellipsis;">
      <button type="submit"
              style="position: absolute; right: 12px; top: 50%; transform: translateY(-50%); width: 24px; height: 24px; display: flex; justify-content: center; align-items: center; background: none; border: none; font-size: 20px; color: #000000; cursor: pointer;">
        🔍
      </button>
    </div>
  </form>

  <ul class="post-list" style="list-style-type: none; padding: 0;">
    <% posts.forEach(post => { %>
      <li class="post-item" style="text-align: left; margin: 15px auto; width: 90%; padding: 10px; border-radius: 5px;">
        <h3><a href="/community/detail/<%= post.post_id %>" style="color: #333; text-decoration: none;"><%= post.title %></a></h3>
        <p><%= post.content %></p>
        <div class="post-meta">
          ☀ <%= post.likeCount %> &nbsp;
          ☆ <%= post.scrapCount %> &nbsp;
          💬 <%= post.commentCount %>
        </div>
        <small><%= new Date(post.createdAt).toLocaleString('ko-KR') %></small>
      </li>
    <% }) %>
  </ul>

  <div style="position: fixed; bottom: 80px; left: 0; right: 0; text-align: center;">
    <a href="/community/post" class="write-button" style="font-size: 28px;">✏️</a>
  </div>
</div>

<style>
.icon {
  cursor: pointer;
  font-size: 24px;
  margin: 0 10px;
}
</style>